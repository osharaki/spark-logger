{
    "name": "Spark Logger",
    "version": "1.0",
    "description": "Converts your food log from text to Sparkpeople entries using your favorites",
    "permissions": [
        "declarativeContent",
        "storage",
        "webRequest",
        "https://www.sparkpeople.com/myspark/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.sparkpeople.com/myspark/nutrition.asp"
            ],
            "js": [
                "scripts/crawler.js"
            ]
        }
    ],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/SL-Logo_16.png",
            "32": "images/SL-Logo_32.png",
            "48": "images/SL-Logo_48.png",
            "128": "images/SL-Logo_128.png"
        }
    },
    "icons": {
        "16": "images/SL-Logo_16.png",
        "32": "images/SL-Logo_32.png",
        "48": "images/SL-Logo_48.png",
        "128": "images/SL-Logo_128.png"
    },
    "manifest_version": 2
}